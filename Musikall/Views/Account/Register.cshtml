<!DOCTYPE html>

@model Musikall.Models.RegisterModel

@{
    ViewBag.Title = "Sign up";
}

<div class="divSignBack" style="background-image: url('/Images/Cover/signCover.png')">
    <div class="divSignUp">
        <div class="divSignUpWrap">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <fieldset>
                    <legend>Sign up</legend>
                    
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <h3 class="field-validation-error-color">@ViewBag.ErrorMessage</h3>
                    }
                    else
                    {
                        <h3>Sign up</h3>
                    }

                    <ol>
                        <li>
                            @Html.LabelFor(m => m.Email)
                            @Html.ValidationMessageFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new {@placeholder="example@example.com"})
                        </li>
                        <li>
                            @Html.LabelFor(m => m.UserName)
                            @Html.ValidationMessageFor(m => m.UserName)
                            @Html.TextBoxFor(m => m.UserName, new { @placeholder = "At least 4 characters" })
                        </li>
                        <li>
                            @Html.LabelFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @placeholder = "At least 6 characters" })
                        </li>
                    </ol>

                    <h3 class="float-left txtSignTo">@Html.ActionLink("sign in", "login") </h3>
                    <input class="float-right inputSign fxTime" type="submit" value="Sign up" />
                </fieldset>
            }
        </div>
        
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
